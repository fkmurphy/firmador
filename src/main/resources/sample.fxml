<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<VBox minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox>
         <children>
            <Button fx:id="btn_select_file" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#selectFile" text="Agregar Archivo" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </HBox.margin>
            </Button>
            <TableView fx:id="table_files">
              <columns>
                <TableColumn fx:id="tb_check_file" maxWidth="1500.0" prefWidth="73.0" text="Firmar" />
                <TableColumn fx:id="tb_path_file" prefWidth="218.0" text="Archivo" />
                  <TableColumn maxWidth="1500.0" prefWidth="52.0" text="Info" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </HBox>
      <Pane>
         <children>
            <PasswordField fx:id="password_token" layoutX="65.0" layoutY="1.0" />
            <Button fx:id="btn_firmar" layoutX="397.0" layoutY="1.0" mnemonicParsing="false" onAction="#firmarButton" text="Firmar" textAlignment="CENTER" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Pane>
   </children>
</VBox>
